<section class="login-container">
  <div id="header-custom">
    <!-- navigation section  -->
    <div class="header-content-custom clearfix">
      <a class="logo" href="/"><img src="/images/logo.png" alt="Mafolio" height="35px"></a>
      <nav class="navigation" role="navigation">
        <ul class="primary-nav">
          <li><a href="/posts/about">소개</a></li><br>

          <% if user_signed_in? %>
          <li ><%= link_to '설문지 만들기', new_post_path %>
              <%else%>
              <%= link_to '설문지 만들기', new_user_session_path, method: :get%>
          </li>
          <% end %>
          <br><br>

          <% if user_signed_in? %>
          <li>
            <a href="/posts/mypage">내 페이지</a>
            <%else%>
            <%= link_to "로그인", new_user_session_path, method: :get, class: "a" %>
          </li>
          <% end %>
          <br><br>

          <% if user_signed_in? %>
          <li>
            <%= link_to "로그아웃", destroy_user_session_path, method: :delete, class: "a" %>
            <% else%>
            <%= link_to "회원가입",new_user_registration_path, method: :get, class: "a" %>
          </li>
          <% end %> 
            
          </li>
        </ul>
      </nav>
      <a href="#" class="nav-toggle">Menu<span></span></a> 
    </div>
      
  </div>
    <!-- navigation section  --> 
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div id="login" class="login">
    <div class="login-icon-field">
      <div class="centered">
        <img class="login-icon hand" src="https://www.iconsdb.com/icons/preview/white/stop-3-xxl.png" width="100px">

      </div>
    </div>
    <div class="login-form">
      <div class="username-row row">
        <label for="username_input">
        <svg version="1.1" class="user-icon" x="0px" y="0px"
        viewBox="-255 347 100 100" xml:space="preserve" height="36px" width="30px">
          <path class="user-path" d="
          M-203.7,350.3c-6.8,0-12.4,6.2-12.4,13.8c0,4.5,2.4,8.6,5.4,11.1c0,0,2.2,1.6,1.9,3.7c-0.2,1.3-1.7,2.8-2.4,2.8c-0.7,0-6.2,0-6.2,0
          c-6.8,0-12.3,5.6-12.3,12.3v2.9v14.6c0,0.8,0.7,1.5,1.5,1.5h10.5h1h13.1h13.1h1h10.6c0.8,0,1.5-0.7,1.5-1.5v-14.6v-2.9
          c0-6.8-5.6-12.3-12.3-12.3c0,0-5.5,0-6.2,0c-0.8,0-2.3-1.6-2.4-2.8c-0.4-2.1,1.9-3.7,1.9-3.7c2.9-2.5,5.4-6.5,5.4-11.1
          C-191.3,356.5-196.9,350.3-203.7,350.3L-203.7,350.3z"/>
        </svg>
        </label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "이메일", class: "username-input bg-transparent" %>
      </div>
      <div class="password-row row">
        <label for="password_input">
        <svg version="1.1" class="password-icon" x="0px" y="0px" viewBox="-255 347 100 100" height="36px" width="30px">
          <path class="key-path" d="M-191.5,347.8c-11.9,0-21.6,9.7-21.6,21.6c0,4,1.1,7.8,3.1,11.1l-26.5,26.2l-0.9,10h10.6l3.8-5.7l6.1-1.1
          l1.6-6.7l7.1-0.3l0.6-7.2l7.2-6.6c2.8,1.3,5.8,2,9.1,2c11.9,0,21.6-9.7,21.6-21.6C-169.9,357.4-179.6,347.8-191.5,347.8z"/>
        </svg>
        </label>
        <%= f.password_field :password, autocomplete: "off", :placeholder => "비밀번호", class: "password-input input bg-transparent" %>
      </div>
      <div class="remember-check">
<% if devise_mapping.rememberable? -%>
        <div class="check-box">
          <%= f.check_box :remember_me, :style => "width: 17px; height: 17px;"%>
        </div>
        <p>&nbspRemember me</p>
<% end -%>
      </div>
    </div>

    <div class="call-to-action">
      <div class="login-button">
        <%= f.submit "로그인" %>
      </div>
<% end %>
      <div class="shared-links">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</section>
